# Example environment variables for API Gateway
# Copy this file to .env and customize for your environment

# Environment
GATEWAY_ENV=development

# Server Configuration
GATEWAY_SERVER_HOST=0.0.0.0
GATEWAY_SERVER_PORT=8080
GATEWAY_SERVER_TLS_ENABLED=false
# GATEWAY_SERVER_TLS_CERT_PATH=/path/to/cert.pem
# GATEWAY_SERVER_TLS_KEY_PATH=/path/to/key.pem

# Logging Configuration
GATEWAY_LOG_LEVEL=INFO
GATEWAY_LOG_FORMAT=json

# Session Configuration
GATEWAY_SESSION_STORE_URL=redis://localhost:6379/0
GATEWAY_TOKEN_SIGNING_SECRET=your-secret-key-here-change-in-production

# Rate Limiting Configuration
GATEWAY_RATELIMIT_ENABLED=true
GATEWAY_RATELIMIT_STORE_URL=redis://localhost:6379/1

# Configuration File Path (optional)
# GATEWAY_CONFIG_PATH=config/gateway.yaml
